            h1 List
            #userList
                .userComponent
                    img(src='https://loremflickr.com/320/240', width='100px')
                    .infor
                        #name Tu
                        div
                            span#dot
                            | Online
                        div
                            span(style='font-weight: bold') Batdau:
                            |  32/43/2000
        #chatForm  
            h1 Chats
            #time  
            #insideChat 
            #threedot
            #inputChat
                input(type="text")#inputMess
                button(type="button" value="")#btnSendMess.btn.btn-primary Send